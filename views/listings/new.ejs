<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br><br>
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label mb-0">Title</label>
        <input
          type="text"
          name="listing[title]"
          placeholder="Add a catchy title"
          class="form-control"
          required
        />
        <!-- <div class="valid-feedback">Title looks good!</div> -->
        <div class="invalid-feedback">Title field is required!</div>
      </div>
      <div class="mb-3">
        <label for="Description" class="form-label mb-0">Description</label>
        <textarea
          type="text"
          rows="2"
          name="listing[description]"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Description is required!</div>

      </div>
      <div class="mb-3">
        <label for="image" class="form-label mb-0">Upload image</label>
        <input
          type="file"
          name="listing[image]"
          class="form-control"
          required
        />
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label mb-0">Price</label>
          <input
            type="number"
            name="listing[price]"
            placeholder="1200"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid price</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label mb-0">Country</label>
          <input
            type="text"
            name="listing[country]"
            placeholder="Nepal"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter a valid country</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label mb-0">Location</label>
        <input
          type="text"
          name="listing[location]"
          placeholder="Kathmandu"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Enter a valid location</div>
      </div>
      <button class="btn btn-dark mb-3 add-btn">Add</button>
    </form>
  </div>
</div>
