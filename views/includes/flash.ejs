<% if(success && success.length){ %>
<div class="flash-container">
  <div
    class="alert alert-success alert-dismissible fade show col-4 flash-error"
    role="alert"
  >
    <%= success %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>

<% } %> <% if(error && error.length){ %>
<div class="flash-container">
  <div
    class="alert alert-danger alert-dismissible fade show col-4 flash-error"
    role="alert"
  >
    <%= error %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %>
